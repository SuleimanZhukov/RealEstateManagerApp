<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/agents_list_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/stroke_view_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/details_heart_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_shape_grey"
        app:layout_constraintBottom_toBottomOf="@+id/agents_list_back_button"
        app:layout_constraintEnd_toEndOf="@+id/agents_list_back_button"
        app:layout_constraintStart_toStartOf="@+id/agents_list_back_button"
        app:layout_constraintTop_toTopOf="@+id/agents_list_back_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/agents_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agents_list_back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>